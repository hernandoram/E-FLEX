                      </a>
                      <div class="dropdown-menu empty"></div>
                  </li> --}}
              </ul>
              <div class="clearfix"></div>
          </div>
      </div>
      <!-- end Topbar -->

      <!-- ========== Left Sidebar Start ========== -->
      <div class="left-side-menu">

          <div class="h-100" data-simplebar>

              <!-- User box -->
              <div class="user-box text-center">
                  <img src="/img/e-flex-logo.jpeg" alt="Logo tienda" title="Mat Helme"
                      class="rounded-circle avatar-md">
                  <div class="dropdown">
                      <a href="javascript: void(0);" class="text-dark font-weight-normal dropdown-toggle h5 mt-2 mb-1 d-block"
                          data-toggle="dropdown" data-store_info="nombre_tienda">Nombre tienda</a>
                      <div class="dropdown-menu user-pro-dropdown">

                          <!-- item-->
                          <a href="/tienda/{{session.tienda}}/productos" class="dropdown-item notify-item">
                              <i class="fa fa-store mr-1"></i>
                              <span>Productos</span>
                          </a>

                          <!-- item-->
                          <a href="/tienda/{{session.tienda}}/carrito" class="dropdown-item notify-item">
                              <i class="fa fa-shopping-cart mr-1"></i>
                              <span>Carrito</span>
                          </a>
                      </div>
                  </div>
                  <div data-store_info="descripcion">comentarios agregados de la tienda u alguna descripcion</div>
                  <p class="text-muted mx-2" data-store_info="nombre"></p>
                  <p class="text-muted mx-2" data-store_info="celular"></p>
                  <p class="text-muted mx-2" data-store_info="correo"></p>
              </div>

              <!--- Sidemenu -->
              <div id="sidebar-menu">

                  <ul id="side-menu">
                      <li class="menu-title mt-2">Tienda</li>
                      <li>
                        <a href="#sidebarCarrito" data-toggle="collapse">
                            <i data-feather="shopping-bag"></i>
                            <span class="badge badge-success badge-pill float-right counter-carrito d-none"></span>
                            <span> Carrito </span>
                        </a>
                        <div class="collapse" id="sidebarCarrito">
                            <ul class="nav-second-level" id="carrito-side-menu"></ul>
                        </div>
                    </li>

                    <li>
                        <a href="/tienda/{{session.tienda}}/carrito">
                            <i data-feather="shopping-cart"></i>
                            <span> Ver carrito </span>
                        </a>
                    </li>
                      
                    <li>
                        <a href="/tienda/{{session.tienda}}/productos">
                            <i data-feather="archive"></i>
                            <span> Productos </span>
                        </a>
                    </li>

                  </ul>

              </div>
              <!-- End Sidebar -->

              <div class="clearfix"></div>

          </div>
          <!-- Sidebar -left -->

      </div>
